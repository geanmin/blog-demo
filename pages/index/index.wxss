/**index.wxss**/

/*轮播图*/

.container {
  width: 100%;
  padding: 0rpx;
}

.container swiper {
  width: 100%;
}

.container swiper image {
  width: 100%;
  border-top: 0rpx;
}

.classify {
  margin-top: 15rpx;
  width: 100%;
  height: 200rpx;
  /* border: 1rpx solid silver; */
}

.imageSigle {
  width: 22%;
  /* border: 1rpx solid silver; */
  height: 120rpx;
  margin: 6rpx 10rpx;
  float: left;
}

.imageSigle image {
  height: 80rpx;
  width: 60%;
  align-content: center;
  text-align: center;
  margin: 10rpx 25rpx;
}

.imageSigle p {
  font-size: 30rpx;
  margin: 0 20rpx;
}

.category {
  width: 100%;
  height: 100%;
  /* border: 1rpx solid silver; */
}

.category .categoryspecial {
  width: 100%;
  /* border: 1rpx solid red; */
}

.category p {
  font-size: 25%;
  color: green;
  margin-left: 20rpx;
}

.category .categoryline {
  border-bottom: 2rpx solid yellow;
  width: 100%;
  height: 1rpx;
}

.category .specialgoods {
  width: 49%;
  height: 150rpx;
  /* border: 1rpx solid silver; */
  float: left;
}

.category .specialgoods image {
  width: 75%;
  height: 100%;
  margin-left: 50rpx;
  margin-top:5rpx;
}

.ProductDetails {
  width: 100%;
}

.ProductDetails .categoryline {
  border-bottom: 2rpx solid yellow;
  width: 100%;
  height: 1rpx;
}

.ProductDetails p {
  font-size: 25%;
  color: green;
  margin-left: 20rpx;
}

.ProductDetails .productgoodshead {
  width: 100%;
  height: 150rpx;
}

.ProductDetails .productgoodshead image {
  width: 100%;
  height: 150rpx;
}

.ProductDetails .indexProductlist {
  width: 100%;
}

.ProductDetails .indexProductSigle {
  width: 50%;
  margin-top: 5rpx;
  float: left;
}

.indexProductSigle image {
  width: 75%;
  height: 200rpx;
  margin-left: 50rpx;
}

.indexProductSigle .productname {
  width: 100%;
  height: 200rpx;
  margin-left: 20rpx;
}

.indexProductSigle .productname  p {
  font: 10rpx;
  color: black;
}

.indexProductSigle .productname  text {
  font: 6rpx;
  color: silver;
  text-decoration: line-through;
}

.indexProductSigle .productname  .heart {
  font: 16rpx;
  color: red;
}
