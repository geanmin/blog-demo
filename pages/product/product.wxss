/**index.wxss**/

/*轮播图*/

.container {
  width: 100%;
  padding: 0rpx;
}

.container swiper {
  width: 100%;
}

.container swiper image {
  width: 100%;
  border-top: 0rpx;
  height: 400rpx;
}

.productAllInfo {
  width: 100%;
  height: 100rpx;
  /* border: 1rpx solid silver; */
  margin-top: 5rpx;
}

.productAllInfo p {
  color: black;
  font: 16rpx;
  margin-left: 26rpx;
}

.productAllInfo .productinfo {
  margin-top: 5rpx;
  width: 100%;
  float: left;
}

.productAllInfo .productinfo p {
  font: 12rpx;
  color: red;
}

.productAllInfo .productinfo text {
  font: 10rpx;
  color: silver;
  text-decoration: line-through;
}

.productAllInfo .productinfo .salecount {
  font-size: 26rpx;
  float: right;
  margin-right: 20rpx;
  color: silver;
}

.productAllInfo .productinfo .productcollection {
  font-size: 30rpx;
  float: right;
  margin-right: 20rpx;
  margin-bottom: 12rpx;
}

.productAllInfo .productinfo .productheart {
  font-size: 26rpx;
  float: right;
  color: red;
}

.productAllInfo .productinfo .productheart p {
  color: black;
  margin-right: 10rpx;
  margin-left: 6rpx;
}

/**横线*/

.categoryline {
  border-bottom: 1rpx solid silver;
  width: 100%;
  height: 1rpx;
}

/**规格*/

.productSpec {
  clear: both;
  margin-left: 20rpx;
  padding-left: 0rpx;
  /* float: left; */
  font-size: 30rpx;
  padding-top: 24rpx;
}

/**数量*/

.productnum {
  margin-left: 20rpx;
  padding-left: 0rpx;
  float: left;
  font-size: 30rpx;
  padding-top: 24rpx;
  display: flex;
}

/**数量加减*/

.productnum .productreduce {
  border: 1rpx solid silver;
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.productnum .productreduce text {
  font-size: 40rpx;
  align-items: center;
  justify-content: center;
  padding-left: 10rpx;
}

.num {
  border: 1px solid silver;
  width: 50rpx;
  height: 50rpx;
}

/**数量加加*/

.productnum .productadd {
  border: 1rpx solid silver;
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.productnum .productadd text {
  font-size: 40rpx;
  align-items: center;
  justify-content: center;
  padding-left: 10rpx;
}

/**加入购物车*/

.productcat {
  position: fixed;
  bottom: 10rpx;
  /* border: 1px solid silver; */
  text-align: center;
  margin-left: 40rpx;
}
.productcat .home {
 width: 80rpx;
 height: 80rpx;
 float: left;
 margin-left: 30rpx;
}
.productcat .home image{
 width: 60rpx;
 height: 60rpx;
}

.productcat text{
   font-size: 24rpx;
   color: white;
}

.productcat .addcat {
  width: 150rpx;
  height: 60rpx;
  float: left;
  margin-left: 40rpx;
  background: green;
}

.productcat .orderbynow {
  width: 150rpx;
  height: 60rpx;
  float: left;
  /* border: 1px solid silver; */
  margin-left: 30rpx;
  background: #FF6400;
}

.productcat .buycart {
 width: 80rpx;
 height: 80rpx;
 float: left;
 margin-left: 30rpx;
}
.productcat .buycart image{
 width: 60rpx;
 height: 60rpx;
}
